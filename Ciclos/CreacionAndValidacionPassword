import java.util.Scanner;

public class CreacionAndValidacionPassword {
    public static void main(String[] args) {

        var consola = new Scanner(System.in);
        var salir = false;

        while(!salir){
            System.out.print("Cree su contrasena de 6 digitos: ");
            var password = consola.nextLine();

            if(password.length() != 6){
                System.out.println("La contrasena debe tener 6 digitos");
            }
            else{
                System.out.println("La contrasena cumple con los parametros");
                salir = true;
            }
        }
    }
}