import java.util.Scanner;

public class CreacionAndValidacionPassword {
    public static void main(String[] args) {

        // Se define el objeto Scanner para leer la entrada del usuario y una variable booleana para controlar el ciclo
        var consola = new Scanner(System.in);
        var salir = false;

        // Ciclo para solicitar al usuario crear una contrasena de 6 digitos
        while(!salir){
            System.out.print("Cree su contrasena de 6 digitos: ");
            var password = consola.nextLine();

            // Validacion de la contrasena, si no tiene 6 digitos mostrar un mensaje de error
            if(password.length() != 6){
                System.out.println("La contrasena debe tener 6 digitos");
            }

            // Si la contrasena tiene 6 digitos, mostrar un mensaje de exito y salir del ciclo
            else{
                System.out.println("La contrasena cumple con los parametros");
                salir = true;
            }
        }
    }
}